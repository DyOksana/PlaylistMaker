<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingHorizontal="14dp">

    <ImageView
        android:id="@+id/imageTrack"
        android:layout_marginVertical="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/textTrackName"
            style="@style/TextTrackNameSetting"
            tools:text="Smells Like Teen Spirit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textArtistName"
                style="@style/TextTrackSetting"
                tools:text="Nirvana"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:src="@drawable/ic_ellipse_12" />

            <TextView
                android:id="@+id/textTrackTime"
                style="@style/TextTrackSetting"
                tools:text="5:01"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp"
        android:gravity="end"
        android:src="@drawable/ic_arrow_forward_24" />
</LinearLayout>

